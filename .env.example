# ==============================================================================
# 4FUN STORE - CONFIGURACIÓN DE ENTORNO
# ==============================================================================

# GENERAL
PORT=9003
NODE_ENV=development
FRONTEND_URL=http://localhost:9002
BACKEND_URL=http://localhost:9003

# BASE DE DATOS (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<usuario>:<password>@<cluster>.mongodb.net/4fun?retryWrites=true&w=majority

# SEGURIDAD Y JWT
# Genera una clave segura: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=30

# MERCADO PAGO (https://www.mercadopago.com.ar/developers)
# Modo: "sandbox" o "production"
MERCADOPAGO_ENV=sandbox
MERCADOPAGO_SANDBOX_TOKEN=TEST-xxxx
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxxx
MERCADOPAGO_WEBHOOK_SECRET=

# RESEND (Email) — https://resend.com
RESEND_API_KEY=re_xxxxxxxxxx
RESEND_FROM_EMAIL=4Fun Store <noreply@tudominio.com>
CONTACT_ADMIN_EMAIL=admin@tudominio.com

# LOGGING
LOG_LEVEL=info
